<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title %></div>
    <!-- HTML forms do not support PUT/DELETE therefore we must use "Method Override"-->
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" placeholder="title" value="<%=blog.title%>">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" placeholder="image" value="<%=blog.image%>">
        </div>
        <div class="field">
            <label>Post Content</label>
            <textarea name="blog[body]" required=true><%=blog.body%></textarea>
        </div>
        <div class="field">
            <button class="ui big violet button">Submit</button>
        </div>
    </form>
</div>


<% include ./partials/footer %>
